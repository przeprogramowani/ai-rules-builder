---
import Button from './Button.astro';

interface Props {
  icon: string;
  title: string;
  subtitle: string;
  features: string[];
  ctaText: string;
  ctaHref: string;
  note?: string;
}

const { icon, title, subtitle, features, ctaText, ctaHref, note } = Astro.props;
---

<div
  class="path-card flex flex-col h-full p-8 bg-gray-900 border-2 border-gray-800 rounded-xl shadow-xl"
>
  <!-- Icon -->
  <div class="path-icon text-5xl mb-4">
    {icon}
  </div>

  <!-- Title & Subtitle -->
  <h3 class="text-2xl font-bold text-white mb-2">
    {title}
  </h3>

  <p class="text-gray-400 mb-6">
    {subtitle}
  </p>

  <!-- Features List -->
  <ul class="space-y-3 mb-8 flex-grow">
    {
      features.map((feature) => (
        <li class="flex items-start text-gray-300">
          <span class="feature-checkmark text-teal-500 mr-2">âœ“</span>
          <span>{feature}</span>
        </li>
      ))
    }
  </ul>

  <!-- CTA Button -->
  <div class="space-y-4">
    <Button href={ctaHref} variant="primary" class="cta-button w-full">
      {ctaText}
    </Button>

    {note && <p class="text-sm text-gray-500 text-center italic">{note}</p>}
  </div>
</div>
