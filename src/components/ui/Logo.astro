---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { size = 'md', class: className = '' } = Astro.props;

const sizeClasses = {
  sm: {
    icon: 'text-lg',
    text: 'text-lg md:text-xl',
  },
  md: {
    icon: 'text-xl',
    text: 'text-xl md:text-2xl',
  },
  lg: {
    icon: 'text-2xl',
    text: 'text-2xl md:text-3xl',
  },
};

const { icon, text } = sizeClasses[size];
---

<div class={`flex items-center space-x-3 group ${className}`}>
  <span class={icon} aria-hidden="true">âœ¨</span>
  <h1
    class={`font-mono ${text} font-semibold bg-gradient-to-r from-blue-400 to-teal-400 bg-clip-text text-transparent group-hover:from-teal-400 group-hover:to-purple-400 transition-colors duration-300`}
  >
    10xRules.ai
  </h1>
</div>
